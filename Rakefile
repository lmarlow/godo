# -*- ruby -*-

require 'rubygems'
require 'hoe'
require './lib/godo.rb'

Hoe.new('godo', Godo::VERSION) do |p|
  p.rubyforge_name = 'rubymatt'
  p.developer( 'Matt Mower', 'self@mattmower.com' )
  p.extra_deps << ['trollop','>= 1.7'] << ['rb-appscript','>= 0.5.1']
  p.remote_rdoc_dir = 'godo'
end

