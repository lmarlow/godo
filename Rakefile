# -*- ruby -*-

require 'rubygems'
require 'hoe'
require './lib/godo.rb'

Hoe.new('godo', Godo::VERSION) do |p|
  p.rubyforge_name = 'simplyruby'
  p.developer( 'Matt Mower', 'self@mattmower.com' )
  p.extra_deps << ['trollop','>= 1.7']
  p.extra_deps << ['rb-appscript','>= 0.5.1']
  p.extra_deps << ['ick','>= 0.2.2']
  p.remote_rdoc_dir = 'godo'
end

